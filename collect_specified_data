import pandas as pd
import numpy as np
import csv

path= '/home/zdong/'


#input csv file,
df = pd.read_csv(path + "combined_td_gps_.csv",usecols=['PTT','argos_date','argos_time'])
df['argos_date'] = pd.to_datetime(df['argos_date'])
a = df.set_index('PTT')

#a.to_csv('ddd')



#Count the number of times each turtle transmits data
ptt = pd.Series(df['PTT'])     
nums_ptt = ptt.value_counts() 
nums_ptt.count()
#
date = pd.Series(df['argos_date'])
nums_date = date.value_counts()


#
grouped = df.groupby('PTT')['argos_date']
date_max = grouped.max()
date_min = grouped.min()
         
#with open('Summary.csv','w') as csvfile:
    

#dalta = pd.datetime(max) - pd.datetime(min) 
#df['time_d'] = max - min

for i in date_max:
    for j in date_min:
        if i == j:
            dalta = date_max - date_min
        print dalta


