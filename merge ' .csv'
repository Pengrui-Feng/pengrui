import os
import pandas as pd
import glob
 
#define merge
 
def merge():
    csv_list = glob.glob('*.csv') #View the number of csv files in the same folder
    print(u'found %s CSV files'% len(csv_list))
    print(u'proccessing............')
    for i in csv_list: 
        fr = open(i,'r').read()
        with open('result.csv','a') as f: #Save the result as 'result.csv'
            f.write(fr)
    print(u'finished！')
 
#定义函数quchong(file)，将重复的内容去掉，主要是去表头
 
